# Apex dLNk Attack Platform - Environment Configuration Template

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Simulation Mode (False = Live Attack Mode, True = Simulation Only)
SIMULATION_MODE=False

# Workspace Directories
WORKSPACE_DIR=workspace
LOGS_DIR=logs
DATA_DIR=data
REPORTS_DIR=reports
LOOT_DIR=workspace/loot

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://apex:apex_password@localhost:5432/dlnk

# Redis (Optional - for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# LLM CONFIGURATION (Ollama)
# ============================================================================

# LLM Provider (ollama, openai, groq)
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mixtral:latest
OLLAMA_TIMEOUT=300

# LLM Settings
LLM_MODEL=mixtral:latest
LLM_TEMPERATURE=0.7
LLM_API_KEY=

# ============================================================================
# C2 & EXFILTRATION CONFIGURATION
# ============================================================================

# C2 Server Domain/IP (used for payloads, callbacks, and data exfiltration)
# Examples: your-server.com, 192.168.1.100:8000, c2.yourdomain.com
C2_DOMAIN=localhost:8000
C2_PROTOCOL=http

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Concurrent Execution
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3

# Workflow
WORKFLOW_TIMEOUT=3600

# Target
TARGET_TIMEOUT=600
MAX_TARGETS=100

# ============================================================================
# EXTERNAL TOOLS
# ============================================================================

NMAP_PATH=nmap
SQLMAP_PATH=sqlmap
NUCLEI_PATH=nuclei
METASPLOIT_PATH=/usr/share/metasploit-framework
WPSCAN_PATH=wpscan

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_PERSISTENCE=True
ENABLE_LATERAL_MOVEMENT=True
ENABLE_DATA_EXFILTRATION=True
ENABLE_PRIVILEGE_ESCALATION=True

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================

# Notification Channels (comma-separated: email,telegram,discord)
NOTIFICATION_CHANNELS=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK_URL=

# ============================================================================
# REPORTING CONFIGURATION
# ============================================================================

REPORT_FORMAT=html
REPORT_INCLUDE_PAYLOADS=False
REPORT_INCLUDE_LOGS=True

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

CACHE_ENABLED=True
CACHE_TTL=3600

# ============================================================================
# PROXY CONFIGURATION (Optional)
# ============================================================================

PROXY_ENABLED=False
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO

